---
import personalData from "../../core/data/personalData";
---

<div class="ContactSocialMedia">
  <ul>
    <li>
      <a href={personalData.linkedin} target="_blank" class="linkedinLink" rel="noopener noreferrer">
        <span class="icon-[bxl--linkedin]"></span>
        <p>{personalData.linkedin}</p>
      </a>
    </li>
    <li>
      <a href={personalData.github} target="_blank" class="githubLink" rel="noopener noreferrer">
        <span class="icon-[bxl--github]"></span>
        <p>{personalData.github}</p>
      </a>
    </li>
    <li>
      <a href={personalData.gitlab} target="_blank" class="gitlabLink" rel="noopener noreferrer">
        <span class="icon-[bxl--gitlab]"></span>
        <p>{personalData.gitlab}</p>
      </a>
    </li>
    <li>
      <a
        href={"https://wa.me/" + personalData.whatsappClean2}
        target="_blank"
        class="whatsappLink"
        rel="noopener noreferrer"
      >
        <span class="icon-[bxl--whatsapp]"></span>
        <p>{personalData.whatsapp2}</p>
      </a>
    </li>
    <li>
      <a
        href={"mailto:" + personalData.email}
        target="_blank"
        class="gmailLink"
        rel="noopener noreferrer"
      >
      <span class="icon-[material-symbols--alternate-email-rounded]"></span>
        <p>{personalData.email}</p>
      </a>
    </li>
  </ul>
</div>

<style>
  .ContactSocialMedia {
    @apply pt-20 pb-5 lg:py-0;
    ul {
      @apply m-0 p-0 
      flex items-center justify-center gap-x-5
      lg:flex-col lg:items-start lg:justify-center lg:gap-x-0 lg:gap-y-10 lg:h-full;
      li {
        @apply my-0;
        a {
          @apply relative cursor-pointer w-[45px] h-[45px] text-center rounded-full text-gray bg-gray-dark transition-all duration-500 
          flex items-center justify-center
          lg:w-[70px] lg:h-[70px];
          span {
            @apply m-0 p-0 text-[25px] lg:text-[40px];
          }
          p {
            font-family: "Fira Mono", sans-serif;
            @apply max-lg:hidden lg:whitespace-nowrap absolute left-[95px] transition-all duration-500 text-sm;
          }
          &::before {
            content: "";
            @apply absolute top-0 left-0 w-full h-full rounded-full bg-primary transition-all duration-500 scale-90 z-[-1]
          }
          &:hover::before {
            box-shadow: 0 0 15px;
          }
          &:hover {
            box-shadow: 0 0 5px;
          }
          &.linkedinLink {
            @apply hover:text-linkedin hover:shadow-linkedin;
            &::before {
              @apply hover:shadow-linkedin;
            }
            &:hover {
              p {
                @apply text-linkedin;
              }
            }
          }
          &.githubLink {
            @apply hover:text-github hover:shadow-github;
            &::before {
              @apply hover:shadow-github;
            }
            &:hover {
              p {
                @apply text-github;
              }
            }
          }
          &.gitlabLink {
            @apply hover:text-gitlab hover:shadow-gitlab;
            &::before {
              @apply hover:shadow-gitlab;
            }
            &:hover {
              p {
                @apply text-gitlab;
              }
            }
          }
          &.whatsappLink {
            @apply hover:text-whatsapp hover:shadow-whatsapp;
            &::before {
              @apply hover:shadow-whatsapp;
            }
            &:hover {
              p {
                @apply text-whatsapp;
              }
            }
          }
          &.gmailLink {
            @apply hover:text-primary hover:shadow-primary;
            &::before {
              @apply hover:shadow-primary;
            }
            &:hover {
              p {
                @apply text-primary;
              }
            }
          }
        }
      }
    }
  }
</style>
