---
/* Types */
import { type MenuItem } from '../../core/models/MenuItem.interface';

/* Utils */
import { getLangFromUrl } from '../../i18n/utils';
import { translate, translateMenu } from '../../i18n/translate'

const lang = getLangFromUrl(Astro.url)
const personalData = translate(lang)
const menu: MenuItem[] = translateMenu(lang)
const indexMenuWorks = 2
const worksId = menu[2].url

let title = 'Hi, my name is'
let text = 'Know my works'

if(lang === 'es') {
  title = 'Hola, mi nombre es'
  text = 'Conoce mi trabajo'
}
---

<div class="Presentation">
  <div class="Presentation__content">
    <h5>{title}</h5>
    <h1>{personalData.shortname}.</h1>
    <p>{personalData.shortPresentation}</p>
    <a href={worksId} class="btn-primary">{text}!</a>
  </div>
</div>

<style>
  .Presentation {
    @apply w-full h-screen flex flex-col justify-center items-center;
    &__content {
        @apply px-6 sm:px-12 lg:px-0 w-full md:max-w-[700px] xl:max-w-[900px];

        h5 {
            @apply mb-2 lg:mb-4;
        }
      h1 {
        @apply text-white mb-14 xl:max-w-[500px];
      }
      p {
        @apply mb-14 text-balance text-xl lg:text-2xl;
      }
      a {
        @apply w-[180px] my-5;
      }
    }
  }
</style>
