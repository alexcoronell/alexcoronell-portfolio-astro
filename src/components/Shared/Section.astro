---
interface Props {
    index: number,
    title: string,
    idTag: string,
}
const { index, title, idTag } = Astro.props;
---
<section class="Section">
    <div class="Section__titleArea">
        <h4 id={idTag}>0{index}.</h4>
        <h3>{title}</h3>
        <div class="Section__titleArea__line"></div>  
    </div>
    <div class="Section__content">
        <slot />
    <div/>
</section>

<style>
    .Section {
        @apply px-6 md:px-0 mx-auto md:w-[80%] md:max-w-[700px] xl:max-w-[800px];
        &__titleArea {
            @apply flex gap-x-3 items-end;
            h3 {
                @apply text-white/80;
            }

            &__line {
                @apply border-t border-white/20 pb-4 grow;
            }
        }
        &__content {
            @apply py-10;
        }
    }
</style>