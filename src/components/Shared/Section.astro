---
interface Props {
    index: number,
    title: string,
}
const { index, title } = Astro.props;
---
<section class="Section">
    <div class="Section__titleArea">
        <h4>0{index}.</h4>
        <h3>{title}</h3>
        <div class="Section__titleArea__line"></div>  
    </div>
    <div class="Section__content">
        <slot />
    <div/>
</section>

<style>
    .Section {
        @apply px-6;
        &__titleArea {
            @apply flex gap-x-3 items-end;

            &__line {
                @apply border-t border-white/20 pb-4 grow;
            }
        }
        &__content {
            @apply py-10;
        }
    }
</style>